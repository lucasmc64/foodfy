{% extends "main/layout.njk" %}

{% block banner %}

    <section id="banner" class="container">
        <div id="content">
            <h2>
                As melhores receitas
            </h2>
            <p>
                Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.
            </p>
        </div>
        <img id="chef" src="./assets/chef.png" alt="Chef">
    </section>

{% endblock %}

{% block main_content %}
    <h2>
        Mais acessadas
    </h2>

    <div class="recipes">

        {% for recipe in recipes %}

            <div class="recipe">
                <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
                
                <div class="description">
                    <h3 class="recipe-title">
                        {{ recipe.title }}
                    </h3>
                    <p class="author">
                        por {{ recipe.chef }}
                    </p>
                </div>
            </div>

        {% endfor %}

    </div>
{% endblock %}