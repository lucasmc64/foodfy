{% extends "main/layout.njk" %}

{% block main_content %}

    <div class="foods">

        {% for recipe in recipes %}
            <a href="/recipes/{{ recipe.id }}" class="recipe">
                <div class="food">
                    <div class="image" style="background: url('{{ recipe.image }}') no-repeat center center / cover"></div>
                    <div class="description">
                        <h3 class="name-food">
                            {{ recipe.title }}
                        </h3>
                        <p class="author">
                            por {{ recipe.chef }}
                        </p>
                    </div>
                </div>
            </a>
        {% endfor %}

    </div>

{% endblock %}