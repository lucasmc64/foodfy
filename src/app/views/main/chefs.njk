{% extends 'main/layout.njk' %}

{% block main_content %}
    <section class="chefs">

        {% for chef in chefs %}
            <div class="chef">
                {% if chef.files.length > 0 %}
                    <img src="{{ chef.files[0].src }}" alt="{{ chef.files[0].name }}">
                {% else %}
                    <img src="http://placehold.it/500x500?text=CHEF SEM FOTO" alt="Chef sem foto">
                {% endif %}

                <div class="description">
                    <h3>{{ chef.name }}</h3>
                    <p>{{ chef.total_of_recipes }} receita{{ 's' if chef.total_of_recipes > 1 }}</p>
                </div>
            </div>
        {% endfor %}

    </section>
{% endblock %}