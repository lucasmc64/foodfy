{% extends 'main/layout.njk' %}

{% block main_content %}
    <section class="chefs">

        {% for chef in chefs %}
            <div class="chef">
                <div class="chef-image" style="background: url({{ chef.avatar_url }}) no-repeat center center / cover"></div>
                <div class="description">
                    <h3>{{ chef.name }}</h3>
                    <p>{{ chef.total_of_recipes }} receita{{ 's' if chef.total_of_recipes > 1 }}</p>
                </div>
            </div>
        {% endfor %}

    </section>
{% endblock %}