{% extends 'admin/layout.njk' %}

{% block main %}

    <section class="title-and-options">
        <h2>Gerenciar receitas</h2>
        <div>
            <a class="button" href="/admin/recipes/create">Adicionar receita</a>
        </div>
    </section>

    <section class="recipes">

        {% for recipe in recipes %}

            <div class="food">
                {% if recipe.files.length > 0 %}
                    <img class="food-image" src="{{ recipe.files[0].src }}" alt="{{ recipe.files[0].name }}">
                {% else %}
                    <img class="food-image" src="http://placehold.it/500x200?text=RECEITA SEM FOTO" alt="Receita sem foto">
                {% endif %}

                <div class="description">
                    <h3>
                        {{ recipe.title }}
                    </h3>
                    <p>
                        por {{ recipe.chef }}
                    </p>
                    <a class="action" href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
                </div>
            </div>

        {% endfor %}

    </section>

{% endblock %}