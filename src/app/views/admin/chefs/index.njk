{% extends 'admin/layout.njk' %}

{% block main %}
    <section class="title-and-options">
        <h2>Gerenciar chefs</h2>
        <div>
            <a class="button" href="/admin/chefs/create">Adicionar chef</a>
        </div>
    </section>
    
    <section class="chefs">

        {% for chef in chefs %}
            <div class="chef">
                {% if chef.files.length > 0 %}
                    <img class="food-image" src="{{ chef.files[0].src }}" alt="{{ chef.files[0].name }}">
                {% else %}
                    <img class="food-image" src="http://placehold.it/500x500?text=CHEF SEM FOTO" alt="Receita sem foto">
                {% endif %}

                <div class="description">
                    <h3>{{ chef.name }}</h3>
                    <a class="action" href="/admin/chefs/{{ chef.id }}">Visualizar</a>
                </div>
            </div>
        {% endfor %}

    </section>
{% endblock %}