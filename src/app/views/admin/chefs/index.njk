{% extends 'admin/layout.njk' %}

{% block main %}
    <section class="title-and-options">
        <h2>Gerenciar chefs</h2>
        <div>
            <a class="button" href="/admin/chefs/create">Adicionar chef</a>
        </div>
    </section>
    
    <section class="chefs">

        {% for chef in chefs %}
            <div class="chef">
                <img src="{{ chef.avatar_url }}" alt="{{ chef.name }}">
                
                <div class="description">
                    <h3>{{ chef.name }}</h3>
                    <a class="action" href="/admin/chefs/{{ chef.id }}">Visualizar</a>
                </div>
            </div>
        {% endfor %}

    </section>
{% endblock %}