{% extends 'admin/layout.njk' %}

{% block title %}
    <h1>Gerenciar chefs</h1>
    <div>
        <a class="button" href="/admin/chefs/create">Adicionar chef</a>
    </div>
{% endblock %}

{% block main %}
    <section class="chefs">

        {% for chef in chefs %}
            <div class="chef">
                <div class="chef-image" style="background: url({{chef.avatar_url}}) no-repeat center center / cover"></div>
                <div class="description">
                    <h3>{{chef.name}}</h3>
                    <a class="action" href="/admin/chefs/{{chef.id}}">Visualizar</a>
                </div>
            </div>
        {% endfor %}

    </section>
{% endblock %}