{% extends 'admin/layout.njk' %}

{% block title %}
    <h1>Editando chef</h1>
    <div>
        <button class="button btn-delete" type="submit" form="edit-chef">Deletar</button>
        <button class="button" type="submit" form="edit-chef">Salvar chef</button>
    </div>
{% endblock %}

{% block main %}
    <form id="edit-chef" method="POST" action="/admin/chefs?_method=PUT">
        <fieldset>

            <legend>Nome</legend>
            <input name="title" type="text" value={{chef.name}} required>

        </fieldset>
        <fieldset>

            <legend>Avatar</legend>
            <input name="avatar_url" type="text" value={{chef.avatar_url}} required>
            <input name="id" type="hidden" value="{{ chef.id }}">

        </fieldset>
    </form>
{% endblock %}