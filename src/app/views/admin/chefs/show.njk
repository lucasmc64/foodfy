{% extends 'admin/layout.njk' %}

{% block main %}
    <section class="title-and-options">
        <h1>Chef:
            {{chef.name}}</h1>
        <div>
            <a class="button" href="/admin/chefs/{{ chef.id }}/edit">Editar chef</a>
        </div>
    </section>
    

    <section class="chef-info">
        <div class="chef-image" style="background: url({{ chef.avatar_url }}) no-repeat center center / cover"></div>
        <h1>{{chef.name}}</h1>
        <p>{{chef.total_of_recipes}}
            receitas</p>
    </section>

    <section class="recipes-container">
        <div class="information-title">
            <h3 class="title">Receitas</h3>
        </div>
        <section class="recipes">
            {% for recipe in recipes %}
                <div class="food">
                    <div class="food-image" style="background: url('{{ recipe.image }}') no-repeat center center / cover"></div>
                    <div class="description">
                        <h3>
                            {{ recipe.title }}
                        </h3>
                        <p>
                            por {{ recipe.chef }}
                        </p>
                        <a class="action" href="/admin/recipes/{{ recipe.id }}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </section>
    </section>
{% endblock %}