{% extends "admin/session/layout.njk" %}

{% block main %}
    <section class="title-and-options session">
        <h2>Nova senha</h2>
        <p>Digite seu email e sua nova senha para acessar o Foodfy.</p>
    </section>

    <form id="reset-password" action="/admin/reset-password" method="POST">
        <fieldset>
            <legend>Email</legend>
            <input type="email" name="email" value="{{ user.email }}">
        </fieldset>

        <fieldset>
            <legend>Nova senha</legend>
            <input type="password" name="password">
        </fieldset>
    
        <fieldset>
            <legend>Repita a nova senha</legend>
            <input type="password" name="password_repeat">
        </fieldset>

        <input type="hidden" name="token" value="{{ token }}">

        <section class="end-form">
            <button class="button" type="submit">Nova senha</button>
        </section>
    </form>
{% endblock %}